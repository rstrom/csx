{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "husky": ">=1",
    "lerna": "^3.19.0",
    "lint-staged": ">=8",
    "prettier": "1.19.1",
    "tsdx": "^0.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
